@model AutoPartsWarehouse.Models.SupplyPosition

@{
    ViewData["Title"] = "Добавить позицию в поставку";
}

<h1>Добавить товар в поставку</h1>

<h4>Позиция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Скрываем ID поставки, чтобы знать куда добавлять -->
            <input type="hidden" asp-for="SupplyId" value="@ViewBag.SupplyId" />

            <div class="form-group mb-3">
                <label class="control-label">Запчасть</label>
                <select asp-for="PartId" class="form-control" asp-items="ViewBag.PartId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" value="1" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PurchasePrice" class="control-label"></label>
                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить и провести приход" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <!-- Ссылка назад на детали поставки -->
    <a asp-controller="Supplies" asp-action="Details" asp-route-id="@ViewBag.SupplyId">Назад к поставке</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}