@model AutoPartsWarehouse.Models.SalePosition

@{
    ViewData["Title"] = "Редактировать позицию";
}

<h1>Редактирование товара в продаже</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SaleId" />

            <div class="form-group mb-3">
                <label class="control-label">Запчасть</label>
                <select asp-for="PartId" class="form-control" asp-items="ViewBag.PartId"></select>
                <span asp-validation-for="PartId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-controller="Sales" asp-action="Details" asp-route-id="@Model.SaleId" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}