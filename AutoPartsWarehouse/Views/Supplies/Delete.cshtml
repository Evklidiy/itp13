@model AutoPartsWarehouse.Models.Supply

@{
    ViewData["Title"] = "Удаление поставки";
}

<h1>Удаление</h1>

<h3>Вы уверены? Это удалит поставку и историю прихода.</h3>
<div>
    <h4>Поставка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class = "col-sm-10">@Model.Date.ToShortDateString()</dd>
        
        <dt class = "col-sm-2">Поставщик</dt>
        <dd class = "col-sm-10">@Model.Supplier?.Name</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class = "col-sm-10">@Model.Status</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Отмена</a>
    </form>
</div>