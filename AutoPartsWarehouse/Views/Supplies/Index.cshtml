@model IEnumerable<AutoPartsWarehouse.Models.Supply>

@{
    ViewData["Title"] = "Управление поставками";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>📦 Журнал поставок</h1>
    <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
        <i class="fas fa-plus-circle"></i> Зарегистрировать поставку
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Дата</th>
                    <th>Поставщик</th>
                    <th>Статус</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Date.ToShortDateString()</td>
                        <td class="align-middle fw-bold">
                            @if (item.Supplier != null)
                            {
                                <a asp-controller="Suppliers" asp-action="Details" asp-route-id="@item.SupplierId" class="text-decoration-none">
                                    @item.Supplier.Name
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Не указан</span>
                            }
                        </td>
                        <td class="align-middle">
                            @if (item.Status == "Получена")
                            {
                                <span class="badge bg-success">@item.Status</span>
                            }
                            else if (item.Status == "Отменена")
                            {
                                <span class="badge bg-danger">@item.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@item.Status</span>
                            }
                        </td>
                        <td class="text-end align-middle">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Состав">
                                    <i class="fas fa-box-open"></i> Товары
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Удалить">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>