@model AutoPartsWarehouse.Models.Supply

@{
    ViewData["Title"] = "Детали поставки";
}

<h1>Поставка #@Model.Id</h1>

<div>
    <h4>Информация</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        
        <dt class="col-sm-2">Поставщик</dt>
        <dd class="col-sm-10">
            @if(Model.Supplier != null) { @Model.Supplier.Name } else { <text>-</text> }
        </dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<hr />
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Состав поставки (Товары)</h4>
    <a asp-controller="SupplyPositions" asp-action="Create" asp-route-supplyId="@Model.Id" class="btn btn-success">
        <i class="fas fa-plus"></i> Добавить товар
    </a>
</div>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Запчасть</th>
            <th>Количество</th>
            <th>Цена закупки</th>
            <th>Сумма</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Positions)
        {
            <tr>
                <td>@item.Part?.Name (@item.Part?.Article)</td>
                <td>@item.Quantity</td>
                <td>@item.PurchasePrice</td>
                <td>@(item.Quantity * item.PurchasePrice)</td>
                <td>
                    <a asp-controller="SupplyPositions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Редактировать">
                        <i class="fas fa-edit"></i>
                    </a>
                    <!-- При желании можно добавить удаление позиции -->
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактировать шапку</a>
    <a asp-action="Index" class="btn btn-secondary">К списку поставок</a>
</div>