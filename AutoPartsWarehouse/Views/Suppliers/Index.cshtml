@model IEnumerable<AutoPartsWarehouse.Models.Supplier>
@{ ViewData["Title"] = "Поставщики"; }
<h1>Поставщики</h1>
<p><a asp-action="Create" class="btn btn-primary">Добавить</a></p>
<table class="table">
    <thead>
        <tr><th>Название</th><th>Контакты</th><th>Рейтинг</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Contacts</td>
            <td>@item.Rating</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Ред.</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Инфо</a> | 
                <a asp-action="Delete" asp-route-id="@item.Id">Уд.</a>
            </td>
        </tr>
    }
    </tbody>
</table>