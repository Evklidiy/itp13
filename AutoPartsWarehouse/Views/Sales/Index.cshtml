@model IEnumerable<AutoPartsWarehouse.Models.Sale>
@{ ViewData["Title"] = "Продажи"; }
<h1>Журнал продаж</h1>
<p><a asp-action="Create" class="btn btn-primary">Новая продажа</a></p>
<table class="table">
    <thead><tr><th>Дата</th><th>Клиент</th><th>Авто</th><th></th></tr></thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.ClientName</td>
            <td>@item.CarDetails</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Состав заказа</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>