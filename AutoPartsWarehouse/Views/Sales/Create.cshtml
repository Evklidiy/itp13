@model AutoPartsWarehouse.Models.Sale
@{ ViewData["Title"] = "Новая продажа"; }
<h1>Оформление продажи</h1>
<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="ClientName"></label>
        <input asp-for="ClientName" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="CarDetails"></label>
        <input asp-for="CarDetails" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Создать (далее выбор товаров)</button>
</form>